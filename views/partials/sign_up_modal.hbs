<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Sign-Up</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div>

        <form action="/register" method="post" id="signupForm">
            <label>E-mail:</label><br> <input id="email" name="email" minlength="5" maxlength="30" type="email" size="30" required><br>
            <label>Password:</label><br> <input id="pwd" name="pwd" type="password" size="20" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"  required><br>
            <label>Enter Password Again:</label><br> <input id="pwd2" name="pwd2" type="password" size="20" required><br>
            <br>
            <div class="alertcontainer">
                {{> signupalert}}
            </div>

        </form>
		
		
    </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" form="signupForm" class="btn btn-primary">Create Account</button>
      </div>
    </div>
  </div>
</div>