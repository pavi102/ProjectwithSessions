<div class="modal fade" id="adminModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Sign-Up</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="row">
                <div class="col align-self-start">
                    <div class="modal-body">
                        <div class="wrapper">
                            <div id="verifeye">
                                <input type="password" placeholder="Admin Verification Code" id="adminPass">
                                <button class="btn btn-outline-info" id="verifyButton">Verify</button>

                            </div>
                            <div id="sign_in" class="d-none">
                                <form action="/registerAdmin" method="post" id="signupForm2">
                                    <label>E-mail:</label><br> <input id="email" name="email" minlength="5" maxlength="30" type="email" size="30" required><br>
                                    <label>Password:</label><br> <input id="pwd" name="pwd" type="password" size="20" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"  required><br>
                                    <label>Enter Password Again:</label><br> <input id="pwd2" name="pwd2" type="password" size="20" required><br>
                                    <br>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col align-self-center">
                        {{>adminalert}}
                </div>
            </div>
            <div class="row-2">
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" form="signupForm2" class="btn btn-primary">Create Account</button>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script>
        let disabledCount = 0;
        $(document).ready(function () {
            $("#verifyButton").on("click", function () {
                if(disabledCount === 5){
                    alert("Sorry no more attempts left");
                }
                else {
                    let inputPass = $("#adminPass").val();
                    if (inputPass === "sdf") {
                        $("#verifeye").addClass("d-none");
                        $("#sign_in").removeClass("d-none");
                    } else {
                        disabledCount += 1;
                        alert(`Wrong Password, ${5 - disabledCount} attempts left`);
                    }
                }
            })
        })
    </script>
</div>